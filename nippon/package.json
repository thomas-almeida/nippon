        "@phosphor-icons/react": "^2.0.9",
        "@uiw/codemirror-theme-dracula": "^4.20.2",
        "@uiw/react-codemirror": "^4.20.2",
        "axios": "^1.6.2",
        "codemirror": "^6.0.1",
        "dexie": "^3.2.3",
        "electron-updater": "^5.3.0",
        "marked": "^5.0.3",
        "prism": "^4.1.2",
        "prismjs": "^1.29.0",
        "react-icons": "^4.8.0",
        "react-markdown": "^8.0.7",
        "remark": "^14.0.3",
        "remark-gfm": "^3.0.1",
        "remark-react": "^9.0.1"
